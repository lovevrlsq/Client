<controls:ChildWindow xmlns:Control="clr-namespace:Client.CustomerService.Control"  x:Class="Client.CustomerService.Control.QrTool"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           HasCloseButton="False">
    <Canvas x:Name="LayoutRoot" Width="420" Height="400">
        <Button Content="管理" Width="60" Height="25" Click="Manage"
        	Style="{StaticResource ResourceKey=SubmitButton}"
        	HorizontalAlignment="Right" Canvas.Left="350" Canvas.Top="10"/>
        <Button Content="取消" Width="60" Height="25" Click="Cancel"
        	Style="{StaticResource ResourceKey=SubmitButton}"
        	HorizontalAlignment="Right" Canvas.Left="350" Canvas.Top="40"/>
        <ScrollViewer Height="380" Width="325" Canvas.Left="10" Canvas.Top="10"
                      VerticalScrollBarVisibility="Visible" Padding="0" Margin="0" BorderThickness="0">
            <ItemsControl Name="ic">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Control:QrRow Click="QrRow_Click" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Canvas>
</controls:ChildWindow>