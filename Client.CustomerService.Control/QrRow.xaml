<UserControl x:Class="Client.CustomerService.Control.QrRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" MinWidth="280" Height="25" Cursor="Hand"
          MouseEnter="OnHover" MouseLeave="OnUnhover" MouseLeftButtonDown="OnClick">
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Name="bg" Grid.ColumnSpan="2" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="Black" Opacity="0.3"/>
            </Border.Background>
        </Border>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="{Binding No}"/>
        <TextBlock Name="_context" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Context}"
                   Grid.Column="1" ToolTipService.ToolTip="{Binding Context}" Margin="0,0,15,0"/>
    </Grid>
</UserControl>
