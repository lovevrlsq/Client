<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="streamedBinding" maxBufferPoolSize="2147483647" maxReceivedMessageSize="2147483647"
          transferMode="Streamed" />
        <binding name="httpBinding" maxBufferPoolSize="2147483647" maxReceivedMessageSize="2147483647"/>
      </basicHttpBinding>
      <netTcpBinding>
        <binding name="tcpBinding" maxBufferPoolSize="2147483647" maxReceivedMessageSize="2147483647">
          <security mode="None"/>
        </binding>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="baseBehaviors">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
        <behavior name="tcpBehaviors">
          <serviceMetadata httpGetEnabled="false" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="domainBehaviors">
          <webHttp/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <services>
      <!--图片流服务-->
      <service behaviorConfiguration="baseBehaviors" name="Client.Service.PicService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration="streamedBinding"
          contract="Client.Service.IPicService" />
        <host>
          <baseAddresses>
            <add baseAddress="http://192.168.1.119:4511/PicService" />
          </baseAddresses>
        </host>
      </service>
      <!--聊天信息服务-->
      <service behaviorConfiguration="tcpBehaviors" name="Client.Service.ChatService">
        <endpoint address="" binding="netTcpBinding" bindingConfiguration="tcpBinding"
                  contract="Client.Service.IChatService" />
        <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://192.168.1.119:4512/ChatService" />
          </baseAddresses>
        </host>
      </service>
      <!--官方用户登陆服务-->
      <service behaviorConfiguration="baseBehaviors" name="Client.Service.OfficialLoginService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration="httpBinding"
                  contract="Client.Service.IOfficialLoginService" />
        <host>
          <baseAddresses>
            <add baseAddress="http://192.168.1.119:4511/OfficialLoginService" />
          </baseAddresses>
        </host>
      </service>
      <!--跨域服务-->
      <service name="Client.Service.DomainService">
        <endpoint address="http://192.168.1.119:4511" behaviorConfiguration="domainBehaviors" binding="webHttpBinding"
            contract="Client.Service.IDomainService" />
        <endpoint address="http://192.168.1.119:80" behaviorConfiguration="domainBehaviors" binding="webHttpBinding"
            contract="Client.Service.IDomainService" />
      </service>
    </services>
  </system.serviceModel>
  <connectionStrings>
    <add name="Client.Model.Properties.Settings.IWorldConnectionString"
      connectionString="Data Source=MAGICVR-PC;Initial Catalog=IWorld;Persist Security Info=True;User ID=sa;Password=aa110110"
      providerName="System.Data.SqlClient" />
    <add
      name="Model2DataContext"
      providerName="System.Data.SqlClient"
      connectionString="Server=.;Database=Client;Trusted_Connection=true;" />
  </connectionStrings>
</configuration>