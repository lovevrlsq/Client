<UserControl x:Class="ToClient.Controls.UploadButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border x:Name="RootBorder" CornerRadius="2" Background="#FFF7F5F5"
            MouseEnter="MouseEnterAction"
            MouseLeave="MouseLeaveAction">
        <Grid Width="95" Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Text="上传图片" FontSize="15" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
