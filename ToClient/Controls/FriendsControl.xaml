<ItemsControl x:Class="ToClient.Controls.FriendsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="MyItemsControl" Height="0">
    <ItemsControl.Resources>
        <Storyboard x:Key="OpenStoryboard">
            <DoubleAnimation x:Name="OpenAnimation" Duration="0:0:0.3" Storyboard.TargetName="MyItemsControl" Storyboard.TargetProperty="Height"/>
        </Storyboard>
    </ItemsControl.Resources>
</ItemsControl>
