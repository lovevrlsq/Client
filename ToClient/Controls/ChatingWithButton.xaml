<UserControl x:Class="ToClient.Controls.ChatingWithButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="RootBorder" Width="125" Height="20" CornerRadius="2" Background="#FFF7F5F5" BorderThickness="1"
            MouseEnter="MouseEnterAction" MouseLeave="MouseLeaveAction" MouseLeftButtonDown="MouseLeftButtonDownAction">
        <TextBlock x:Name="TextBlock" Text="{Binding Username}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
